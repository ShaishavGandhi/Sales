<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.shaishavgandhi.sales.AddProduct">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="horizontal">



            <ImageView
                android:id="@+id/product_image"
                android:layout_width="100dp"
                android:src="@drawable/no_product_image"
                android:layout_height="100dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:layout_marginRight="10dp">

            <EditText
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/name"
                android:hint="Product Name"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:textColorHint="#6C7A89"></EditText>

            <EditText
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/description"
                android:maxLines="4"
                android:hint="Product Description (optional)"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:textColorHint="#6C7A89"></EditText>


        </LinearLayout>



     </LinearLayout>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/cost_price"
        android:hint="Cost Price"
        android:inputType="numberDecimal"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        android:textColorHint="#6C7A89"
        android:padding="5dp"
        android:nestedScrollingEnabled="false"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"></EditText>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/selling_price"
        android:hint="Selling Price"
        android:inputType="numberDecimal"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColorHint="#6C7A89"></EditText>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/discount_price"
        android:hint="Discount Price (optional)"
        android:inputType="numberDecimal"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        android:textColorHint="#6C7A89"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"></EditText>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/category"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="Category (optional)"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        android:textColorHint="#6C7A89"></EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/quantity"
        android:hint="Quantity in stock"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColorHint="#6C7A89"
        android:inputType="number"
        />

    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:id="@+id/addProduct"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Add Product"
        android:textColor="#ffffff"
        android:background="#336E7B"
        android:textSize="18sp"></Button>
</LinearLayout>
